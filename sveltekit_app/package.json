		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0"	
	},
	"dependencies": {
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"dotenv": "^16.4.5",
		"svelte": "^5.0.0",
		"vite": "^5.0.3"
	}
